{
  "title": "VerificarEmails - Validación individual",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "email": {
      "title": "Correo electrónico",
      "type": "string",
      "description": "Correo que deseas verificar",
      "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "editor": "textfield"
    },
    "token": {
      "title": "API Token",
      "type": "string",
      "description": "Tu token personal de VerificarEmails.com",
      "editor": "textfield"
    }
  },
  "required": ["email", "token"]
}